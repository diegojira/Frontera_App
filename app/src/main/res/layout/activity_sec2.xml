            <CheckBox android:id="@+id/checkq13_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="h. Renta de equipo especializado"
                android:onClick="onCheckboxClicked"/>

            <CheckBox android:id="@+id/checkq13_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="i.Vigilancia"
