            <EditText
                android:id="@+id/et_servicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType=""
                android:text="Servicios en el ANP"
                android:textAlignment="center"
                android:textColor="#F8F8F8"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_Intro_servicios"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:ems="10"
                android:text="¡Hola de nuevo! Ahora que ha podido conocer más sobre este bello lugar, deseamos conocer su opinión sobre los servicios que ofrecemos a nuestros visitantes."
