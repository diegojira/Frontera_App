                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/md_blue_200"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/et_q13_servicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="13.Del siguiente listado, ¿Qué tipo de servicios pudo identificar dentro de la ANP? (PC)"
                android:textSize="18sp" />

            <CheckBox android:id="@+id/checkq13_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a. Tiendas"
                android:onClick="onCheckboxClicked"/>

            <CheckBox android:id="@+id/checkq13_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b. Restaurantes, fondas, puestos de comida. "
                android:onClick="onCheckboxClicked"/>
            <CheckBox android:id="@+id/checkq13_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c. Centro de visitantes y/o información turística"
                android:onClick="onCheckboxClicked"/>
            <CheckBox android:id="@+id/checkq13_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d. Sanitarios "
                android:onClick="onCheckboxClicked"/>
            <CheckBox android:id="@+id/checkq13_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="e. Hoteles"
                android:onClick="onCheckboxClicked"/>

            <CheckBox android:id="@+id/checkq13_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="f. Botes de basura"
